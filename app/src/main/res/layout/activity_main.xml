<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="justin_lelouedec.project.MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/button_material_light">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView1"
        android:fillViewport="true"
        android:background="#bdbdbd"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/global"
            android:background="#bcb7b7"
            android:weightSum="1">



            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="227dp"
                android:id="@+id/scrollView"
                android:fillViewport="true"
                android:layout_weight="1.09">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/notifs"
                    android:background="@color/bright_foreground_material_dark">
                </LinearLayout>
            </ScrollView>

            <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:rowCount="3"
        android:orientation="horizontal"
        android:columnCount="2"
        android:background="#90b08888">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:id="@+id/button3"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disconnect"
            android:id="@+id/button5"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Notifications"
            android:id="@+id/button6"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test send data  Button"
            android:id="@+id/button7"
            android:layout_gravity="center"
            android:textSize="12dp"
            android:layout_row="1"
            android:layout_column="1" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Only Messages"
            android:id="@+id/switch1" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Only Calls"
            android:id="@+id/switch2"
            android:layout_row="2"
            android:layout_column="1"
            android:checked="false" />

    </GridLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Battery"
                android:id="@+id/button8" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
